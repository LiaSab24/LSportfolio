{
  "extends": [
    "html-validate:recommended"
  ],
  "rules": {
    "no-unknown-elements": "off",
    "class-pattern": [
      "error",
      {
        "pattern": "^[a-z0-9-]+(__[a-z0-9-]+)?(--[a-z0-9-]+)?$"
      }
    ],
    "attr-case": "off",
    "attr-pattern": [
      "error",
      {
        "pattern": "^([a-z0-9-]+|[\\*\\[\\(#][a-zA-Z0-9\\__\\-\\.\\:\\]\\)]+)$"
      }
    ]
  }
}